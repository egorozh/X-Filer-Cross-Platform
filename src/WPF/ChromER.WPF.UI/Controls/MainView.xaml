<UserControl x:Class="ChromER.WPF.UI.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             xmlns:ui="clr-namespace:ChromER.WPF.UI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <ui:CommandReference x:Key="CreateNewTabItemCommand"
                             Command="{Binding DataContext.CreateNewTabItemCommand,ElementName=InitialTabablzControl}" />
        <ui:CommandReference x:Key="OpenTabItemInNewWindowCommand"
                             Command="{Binding DataContext.OpenTabItemInNewWindowCommand,ElementName=InitialTabablzControl}" />
        <ui:CommandReference x:Key="DuplicateTabCommand"
                             Command="{Binding DataContext.DuplicateTabCommand,ElementName=InitialTabablzControl}" />


        <ui:CommandReference x:Key="CloseAllTabsCommand"
                             Command="{Binding DataContext.CloseAllTabsCommand,ElementName=InitialTabablzControl}" />
    
    </UserControl.Resources>

    <dragablz:TabablzControl x:Name="InitialTabablzControl"
                             FixedHeaderCount="0"
                             Style="{StaticResource TabablzControlStyle}"
                             AddLocationHint="After">
        <dragablz:TabablzControl.ItemContainerStyle>
            <Style TargetType="{x:Type dragablz:DragablzItem}" BasedOn="{StaticResource ChromerDragableTabItemStyle}">

                <Setter Property="ContextMenu">
                    <Setter.Value>
                        <ContextMenu>
                            <MenuItem Header="Новая вкладка справа"
                                      Command="{StaticResource CreateNewTabItemCommand}"
                                      CommandParameter="{Binding}" />
                            <MenuItem Header="Открыть вкладку в новом окне"
                                      Command="{StaticResource OpenTabItemInNewWindowCommand}"
                                      CommandParameter="{Binding}" />

                            <Separator />

                            <MenuItem Header="Обновить"
                                      InputGestureText="Ctrl + R" />
                            <MenuItem Header="Дублировать"
                                      Command="{StaticResource DuplicateTabCommand}"
                                      CommandParameter="{Binding}" />

                            <Separator />

                            <MenuItem Header="Закрыть"
                                      InputGestureText="Ctrl + W"
                                      Command="{x:Static dragablz:TabablzControl.CloseItemCommand}"
                                      CommandParameter="{Binding  RelativeSource={RelativeSource TemplatedParent}}" />

                            <MenuItem Header="Закрыть другие вкладки"
                                      Command="{StaticResource CloseAllTabsCommand}"
                                      CommandParameter="{Binding}" />

                        </ContextMenu>
                    </Setter.Value>
                </Setter>
            </Style>
        </dragablz:TabablzControl.ItemContainerStyle>

        <dragablz:TabablzControl.InterTabController>
            <dragablz:InterTabController InterTabClient="{Binding InterTabClient}"
                                         Partition="2AE89D18-F236-4D20-9605-6C03319038E6" />
        </dragablz:TabablzControl.InterTabController>
    </dragablz:TabablzControl>
</UserControl>