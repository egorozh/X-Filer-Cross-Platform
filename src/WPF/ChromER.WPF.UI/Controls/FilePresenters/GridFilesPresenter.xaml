<UserControl x:Class="ChromER.WPF.UI.GridFilesPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:ChromER.WPF.UI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <DataGrid ItemsSource="{Binding DirectoriesAndFiles}"
              SelectedItem="{Binding SelectedFileEntity, Mode=TwoWay}"
              AutoGenerateColumns="False"
              Background="Transparent">
        <DataGrid.ItemContainerStyle>
            <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </DataGrid.ItemContainerStyle>
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Имя">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">

                            <Image MaxWidth="18"
                                   MaxHeight="18"
                                   Margin="0 0 5 0"
                                   Source="{Binding ., Converter={ui:FileEntityToImageConverter}}" />

                            <TextBlock HorizontalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding Name}"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            <DataGridTextColumn Header="Дата изменения"
                                IsReadOnly="True" 
                                Binding="{Binding ChangeDateTime}"/>
            <DataGridTextColumn Header="Размер"
                                IsReadOnly="True" 
                                Binding="{Binding Size}"/>
        </DataGrid.Columns>

    </DataGrid>
</UserControl>