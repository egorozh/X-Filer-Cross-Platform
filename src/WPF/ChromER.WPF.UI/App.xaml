<Application x:Class="ChromER.WPF.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:chromEr="clr-namespace:ChromER;assembly=ChromER"
             xmlns:ui="clr-namespace:ChromER.WPF.UI"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             ShutdownMode="OnLastWindowClose">

    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/Menu.xaml" />
                <ResourceDictionary Source="Themes/Icons.xaml" />
                <ResourceDictionary Source="Themes/Scroll.xaml" />

                <ResourceDictionary Source="pack://application:,,,/Dragablz;component/Themes/Generic.xaml" />

                <ResourceDictionary Source="Themes/Dragablze.xaml" />

                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type chromEr:DirectoryTabItemViewModel}">
                        <ui:DirectoryTabItem />
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

</Application>